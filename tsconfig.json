{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "es5",
    "sourceMap": true,
    "jsx": "react",
    "strict": true,
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "typeRoots": ["typings"],
    "declaration": true,
    "outDir": "dist",
    "isolatedModules": false,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
