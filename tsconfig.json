{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "esnext",
    "sourceMap": true,
    "declaration": true,
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "types": ["node"],
    "typeRoots": ["typings"],
    "outDir": "dist",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
